<%= form_for([current_user, @item]) do |form| %>

    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>


    <%= form.label :description %>
    <%= form.text_area :description, id: :item_description %>


    <%= form.label :location %>
    <%= form.text_field :location, id: :item_location %>


    <%= form.label :image %>
    <%= form.text_area :image, id: :item_image %>


    <%= form.label :available %>
    <%= form.check_box :available, id: :item_available %>

    <%= form.submit %>


<% end %>
